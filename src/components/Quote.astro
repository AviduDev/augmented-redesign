---
// data fetching
export interface Props {
  quote: string;
  quoteName: string;
}

const { quote, quoteName } = Astro.props;
---

<div class="quoteContainer">
  <div class="quoteWrapper">
    <p class="quote des">{quote}"</p>
    <p class="quote name">{quoteName}</p>
  </div>
  <div class="background"></div>
</div>

<style>
  .quoteContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--white);
    padding: 0.5rem;
    background: url("https://res.cloudinary.com/avidu/image/upload/v1688449132/Augmented/download_2_doqovm.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    min-height: 50vh;
    position: relative;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: rgba(0, 0, 0, 0.7);
  }
  

  .quoteWrapper {
    z-index: 2;
  }

  .name {
    align-self: flex-end;
    margin-top: 1rem;
  }

  .quoteWrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  /* responsive design */

  @media screen and (min-width: 1024px) {
    .quoteWrapper {
      max-width: 600px;
    }

    .quoteContainer {
      height: 80vh;
    }
  }
</style>
