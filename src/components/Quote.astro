---
// data fetching
const response = await fetch(
  "https://ap-southeast-2.cdn.hygraph.com/content/clk221xts0epd01uegwso9jj6/master",
  {
    method: "POST",
    headers: {
      "Content-Type": "application.json",
      Accept: "application/json",
    },
    body: JSON.stringify({
      query: `
        {
        home(where: {id: "clk2511yi3iqw0b1fy3ohm0ao"}) {
          heroTitle
          heroDescription
          quote
          whysUs
        }
      }
    `,
    }),
  }
);

const home = await response.json();
---

<div class="quoteContainer">
  <p class="quote des">“Love & Forever Here at Augmented Arts Weddings, we capture the dear soul that join together in one special day, professionally curated, exported for tears and joy..."</p>
  <p class="quote name">–Augmented Arts Weddings</p>
  <div class="background"></div>
</div>

<style>
  .quoteContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--white);
    padding: 0.5rem;
    background: url("https://res.cloudinary.com/avidu/image/upload/v1688449132/Augmented/download_2_doqovm.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    min-height: 50vh;
    position: relative;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: rgba(0, 0, 0, 0.7);
  }

  .quote {
    z-index: 2;
  }

  .name {
    align-self: flex-end;
    margin-top: 1rem;
  }
</style>
