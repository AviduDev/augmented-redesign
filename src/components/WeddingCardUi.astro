---
export interface Props {
  title: string;
  description: string;
  imgSrc: string;
  imgAlt: string;
  slug: string;
}

const { title, description, imgSrc, imgAlt, slug } = Astro.props;

// imports
import PrimaryButton from "./PrimaryButton.astro";
---

<div class="weddingGrid">
  <div class="weddingItem">
    <div class="imageContainer">
      <h3 class="weddingTitle">{title}</h3>
      <img class="weddingImage ukiyo" src={imgSrc} alt={imgAlt} />
    </div>

    <p>{description}</p>
    <PrimaryButton link={`/weddings/${slug}`} buttonText="full wedding" />
  </div>
</div>

<style>
  .weddingGrid {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    padding: 0.5rem;
    box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);
  }

  .weddingItem {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 1rem 0 1rem 0;
    height: clamp(30vh, 75vh 100vh);
  }
  .imageContainer {
    position: relative;
    height: 50vh;
    overflow: hidden;
  }

  .weddingImage {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
  }

  .weddingTitle {
    position: absolute;
    background-color: #fff;
    padding: 0.5rem;
    border-top-right-radius: 1rem;
    bottom: 0;
    left: 0;
  }
</style>

<script></script>
