---
export interface Props {
  title: string;
  imageSrc: string;
  slug: string;
}

const { title, imageSrc, slug } = Astro.props;
---

<div class="serviceGrid">
  <a href={`/${slug}`} class="serviceItem">
    <img src={imageSrc} alt="" class="background" />
    <h3 class="serviceTitle">{title}</h3>
  </a>
</div>

<style>
  .serviceGrid {
    display: flex;
    flex-direction: column;
  }

  .serviceItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    position: relative;
    overflow: hidden;
    height: clamp(50vh, 400px, 60vh);
    margin: 0.5rem 0 0.5rem 0;
    padding: 0.5rem;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 0%,
      rgb(255, 255, 255) 100%
    );
    transition: all ease-in-out 0.5s;
  }

  .serviceItem:hover {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 100%
    );
    color: var(--white);
  }

  .background {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    object-fit: cover;
    object-position: top;
    width: 100%;
    height: 100%;
  }

  /* responsive design */

  @media screen and (min-width: 1024px) {
    .serviceItem {
      height: clamp(80vh, 60vh, 90vh);
    }
  }
</style>
