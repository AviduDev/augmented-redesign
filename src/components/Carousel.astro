<style>
  @keyframes slidy {
    0% {
      left: 0%;
    }
    20% {
      left: 0%;
    }
    25% {
      left: -100%;
    }
    45% {
      left: -100%;
    }
    50% {
      left: -200%;
    }
    70% {
      left: -200%;
    }
    75% {
      left: -300%;
    }
    95% {
      left: -300%;
    }
    100% {
      left: -400%;
    }
  }

  .imageWrapper {
    position: relative;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: row;
  }

  div#slider {
    overflow: hidden;
    transition: all ease-in-out 0.5s;
    position: relative;
  }
  div#slider figure img {;
  }

  figure {
    display: flex;
    flex-direction: row;
  }
  div#slider figure {
    position: relative;
    width: 500%;
    margin: 0;
    left: 0;
    text-align: left;
    font-size: 0;
    animation: 10s slidy infinite;
  }

  .Sliderimage {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    object-fit: cover;
    object-position: top;
  }
</style>