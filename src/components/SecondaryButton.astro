---
export interface Props {
  buttonText: string;
  link: string;
}
const { buttonText, link } = Astro.props;
---

<button class="buttonContainer">
  <a href={link} class="buttonLink">
    {buttonText}
  </a>
</button>

<style>
  .buttonContainer {
    padding: 0.5em;
    margin: 0.5em;
    color: var(--white);
  }

  .buttonLink {
    width: 100%;
    height: 100%;
    cursor: pointer;
    transition: all ease-in-out 0.5s;
    text-decoration: underline;

  }

  .buttonLink:hover {
    text-decoration: none;
  }
</style>

