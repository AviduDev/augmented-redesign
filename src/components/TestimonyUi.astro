---
export interface Props {
  description: string;
  imgSrc: string;
  imgAlt: string;
  names: string;
}

const { description, imgSrc, imgAlt, names } = Astro.props;
---

<div class="testimonyGrid">
  <div class="testimonyContainer">
    <p>{description}</p>
    <div class="details">
      <div class="imageWrapper">
        <img src={imgSrc} alt={imgAlt} />
      </div>
      <p class="coupleNames"><b>{names}</b></p>
    </div>
  </div>
</div>

<style>

.imageWrapper {
  overflow: hidden;
  border-radius: 50%;
  width: 5rem;
  height: 5rem;
}

  .testimonyContainer {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);
  }

  .coupleNames {
    margin-top: 0.5rem;
  }

  .details {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>

