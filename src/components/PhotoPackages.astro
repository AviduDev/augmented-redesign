---
// dataaaaaas
const response = await fetch(
  "https://ap-southeast-2.cdn.hygraph.com/content/clk221xts0epd01uegwso9jj6/master",

  {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Accept: "application/json",
    },
    body: JSON.stringify({
      query: `
        {
            packages(where: {type: Photography}) {
                packageName
                packageFeatures
                price
            }
        }
    `,
    }),
  }
);

const packages = await response.json();
---

<div class="packageGrid">
  {
    packages.data.packages.map((pack: any) => (
      <div class="gridItem">
        <h4>{pack.packageName}</h4>
        <ul>
          {pack.packageFeatures.map((features: any) => (
            <li>
              {features}
              <hr />
            </li>
          ))}
        </ul>
        <p class="packagePrice">${pack.price}</p>
      </div>
    ))
  }
</div>

<style>
  ul {
    padding-left: 1rem;
  }
  li {
    list-style: square;
    padding: 0 0 0.5rem 0;
  }

  li > hr {
    margin: 0.5rem 0 0 0;
  }
</style>
